      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :dob %>
    <%= f.text_field :dob %>
  </div>

  <div class="field">
    <%= f.label :gender %>
    <%= f.text_field :gender %>
  </div>

  <div class="field">
    <%= f.label :role_id %>
    <%= f.collection_select :role_id, Role.all.order("id DESC"), :id, :name, {prompt: "Select User Role"}  %>
  </div>
  <div class="field">
    Select Fecility
    <%= select_tag :user_facilites, options_from_collection_for_select(Facility.all, "id", "name"), multiple: true
 %>
